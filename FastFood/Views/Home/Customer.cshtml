                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusCustomer" class="control-label"></label>
                <input asp-for="StatusCustomer" class="form-control" />
                <span asp-validation-for="StatusCustomer" class="text-danger"></span>
