@model FastFood.DataLayer.Model.Customers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer</title>
</head>
<body>

<h4>Customers</h4>
<hr />
<div class="row">
