@model FastFood.DataLayer.Model.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Category</title>
</head>
<body>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Category">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label"></label>
                <input asp-for="CategoryID" class="form-control" />
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryCreateDate" class="control-label"></label>
                <input asp-for="CategoryCreateDate" class="form-control" />
                <span asp-validation-for="CategoryCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryUpdateDate" class="control-label"></label>
                <input asp-for="CategoryUpdateDate" class="form-control" />
                <span asp-validation-for="CategoryUpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDeleteDate" class="control-label"></label>
                <input asp-for="CategoryDeleteDate" class="form-control" />
                <span asp-validation-for="CategoryDeleteDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDelete" /> @Html.DisplayNameFor(model => model.IsDelete)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
